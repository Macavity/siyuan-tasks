{
  "name": "siyuan-tasks",
  "version": "1.2.0",
  "type": "module",
  "description": "SiYuan plugin to display all tasks in a panel.",
  "repository": "https://github.com/Macavity/siyuan-tasks",
  "homepage": "https://github.com/Macavity/siyuan-tasks",
  "author": "Macavity",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development VITE_SOURCEMAP=inline vite build --watch",
    "build": "cross-env NODE_ENV=production vite build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "make-link": "node --no-warnings ./scripts/make_dev_link.js",
    "make-link-win": "powershell.exe -NoProfile -ExecutionPolicy Bypass -File ./scripts/elevate.ps1 -scriptPath ./scripts/make_dev_link.js",
    "update-version": "node --no-warnings ./scripts/update_version.js",
    "lint": "eslint",
    "check": "svelte-check",
    "validate": "svelte-check && eslint",
    "make-install": "vite build && node --no-warnings ./scripts/make_install.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@tsconfig/svelte": "^4.0.1",
    "@types/node": "^20.16.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-svelte": "^2.45.1",
    "fast-glob": "^3.2.12",
    "glob": "^11.0.0",
    "globals": "^15.12.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "minimist": "^1.2.8",
    "prettier": "^3.4.2",
    "rollup-plugin-livereload": "^2.0.5",
    "sass": "^1.63.3",
    "siyuan": "^1.0.8",
    "svelte": "^5.35.2",
    "svelte-check": "^4.2.2",
    "svelte-eslint-parser": "^1.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.4.18",
    "vite-plugin-static-copy": "^1.0.2",
    "vite-plugin-zip-pack": "^1.0.5",
    "vitest": "^3.2.4"
  }
}